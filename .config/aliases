# path:       ~/.config/aliases
# author:     klassiker [mrdotx]
# github:     https://github.com/mrdotx/dotfiles
# date:       2020-02-14T09:33:09+0100

# color commands
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias diff='diff --color=auto'
alias tree='tree -C'

# tools
alias more='less'
alias calc='python -ic "from __future__ import division; from math import *; from random import *"'
alias cp='cp -i'
alias nf='neofetch'

alias rg='ranger'
alias rs='sudo ranger'
alias xn='vim $HOME/Dokumente/Notes/index.md'
alias nb='polybar-msg hook module/rss 1 > /dev/null 2>&1 && newsboat -q && polybar-msg hook module/rss 2 > /dev/null 2>&1'
alias we='weechat'
alias tx='if [ -z "$TMUX" ]; then tmux attach -t mi || tmux new -s mi; fi'
alias cm='cmatrix -su 7'
alias wt='curl -H "Accept-Language: de" wttr.in'
alias sw='telnet towel.blinkenlights.nl'
alias rb='link_handler.sh $(link_parser.py https://www.youtube.com/user/ROCKETBEANSTV | grep watch | sed "q1")'

# git
alias dotfiles='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

# maintenance
alias ch='systemctl --failed && journalctl -p 3 -xb'
alias up='yay -Syu'
alias cc='yay -Yc && sudo paccache -rvk2'
alias mu='sudo pacman-mirrors -c Germany && sudo pacman -Syyu'
alias cu='ch && up'

alias bu='backup.sh'
alias buu='backup_usb.sh'

alias dm='delete_metafiles.sh'
alias sc='system_cleanup.sh'

# ssh
alias pi='ssh hermes'
alias ch_pi='pi sys_stat.sh'
alias pi2='ssh prometheus'
alias ch_pi2='pi2 sys_stat.sh'
alias p9='ssh p9'
alias m3='ssh m3'
alias firetv='ssh firetv'
alias firetv4k='ssh firetv4k'

# vim:ft=sh
