[Unit]
Description=xautolock to auto lock/suspend device

[Service]
Type=simple
Environment=DISPLAY=:0
ExecStart=/usr/bin/xautolock -detectsleep
Restart=on-failure
RestartSec=1m

[Install]
WantedBy=i3.target
