[Unit]
Description=libinput gestures for synaptics touchpad

[Service]
Type=forking
ExecStartPre=/usr/bin/sleep 2
ExecStart=/usr/bin/libinput-gestures-setup start
ExecStop=/usr/bin/libinput-gestures-setup stop

[Install]
WantedBy=default.target
