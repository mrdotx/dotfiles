# general
auto-reload yes
reload-time 15
prepopulate-query-feeds yes
show-read-feeds yes
keep-articles-days 30
cleanup-on-quit yes

browser "~/projects/newsboat/link_handler.sh %u"
external-url-viewer "~/projects/newsboat/link_handler.sh %u"

# inoreader
urls-source "inoreader"
inoreader-login "klassiker"
inoreader-passwordeval "gpg --decrypt ~/cloud/webde/Keys/newsboat-inoreader.txt.gpg"
inoreader-flag-share "a"
inoreader-flag-star "b"
inoreader-show-special-feeds no
inoreader-min-items 999

# macros
macro , open-in-browser
macro b set browser "brave %u"; open-in-browser ; set browser "~/projects/newsboat/link_handler.sh %u"
macro w set browser "$TERMINAL -e $TERMINALBROWSER %u &"; open-in-browser ; set browser "~/projects/newsboat/link_handler.sh %u"
macro m set browser "mpv %u"; open-in-browser ; set browser "~/projects/newsboat/link_handler.sh %u"

# colors
color background                    white   black
color listnormal                    green   black
color listfocus                     cyan    blue    bold
color listnormal_unread             red     black
color listfocus_unread              white   blue    bold
color info                          cyan    black
color article                       white   black

# Highlight
search-highlight-colors             black   yellow  bold

highlight all "Afd"                 color14 black   underline
highlight all "Brexit"              color6  black   underline
highlight all "Trump"               color13 black   underline
highlight all "Erdogan"             color5  black   underline
highlight all "DSGVO|Datenschutz"   color11 black   underline

highlight article "^(Feed|Titel|Author|Link|Datum):"    blue    black   underline

