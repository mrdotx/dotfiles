# general
auto-reload yes
reload-time 15
prepopulate-query-feeds yes
show-read-feeds yes
keep-articles-days 30
cleanup-on-quit yes

browser "link_handler.sh %u"
external-url-viewer "link_handler.sh %u"

# inoreader
urls-source "inoreader"
inoreader-login "klassiker"
inoreader-passwordeval "gpg --decrypt ~/.local/share/cloud/webde/Keys/newsboat-inoreader.gpg"
inoreader-flag-share "a"
inoreader-flag-star "b"
inoreader-show-special-feeds no
inoreader-min-items 999

# macros
macro , open-in-browser
macro w set browser "brave %u"; open-in-browser ; set browser "link_handler.sh %u"
macro m set browser "mpv %u"; open-in-browser ; set browser "link_handler.sh %u"

# colors
