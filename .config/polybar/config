# colors
[colors]
    background = ${xrdb:Polybar.background0:#e6000000}
    foreground = ${xrdb:Polybar.foreground0:#cccccc}
    foreground1 = ${xrdb:Polybar.foreground1:#666666}
    main = ${xrdb:Polybar.main0:#4185d7}
    white = ${xrdb:color15:#ffffff}
    black = ${xrdb:color0:#000000}
    grey = ${xrdb:color7:#cccccc}
    blue = ${xrdb:color12:#4185d7}
    green = ${xrdb:color2:#00b200}
    red = ${xrdb:color9:#df2800}
    yellow = ${xrdb:color3:#b0b200}

# wm
[global/wm]
    margin-top = 0
    margin-bottom = 0

# settings
[settings]
    screenchange-reload = true
    format-background = ${colors.background}
    format-foreground = ${colors.foreground}
    format-overline = ${colors.main}

# bars
[bar/i3_general]
    monitor = ${env:MONITOR:eDP1}
    bottom = false
    width = 100%
    height = 26
    locale = de_DE.UTF-8
    enable-ipc = true
    background = ${colors.background}
    line-size = 2
    module-margin = 1
    font-0 = "DejaVu Sans:pixelsize=10:antialias=true:autohint=true;2"
    font-1 = "Font Awesome 5 Free:style=Solid:pixelsize=10:antialias=true:autohint=true;2"
    font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=10:antialias=true:autohint=true;2"
    font-3 = "Font Awesome 5 Brands:style=Regular:pixelsize=10:antialias=true:autohint=true;2"
    cursor-click = pointer
    cursor-scroll = ns-resize

[bar/i3_single_bar]
    inherit = bar/i3_general
    tray-position = right
    tray-reparent = true
    tray-background = ${colors.background}
    modules-left = i3_upin authentication printer bluetooth gestures rss timesync firewall resolver vpnhades xwindow
    modules-right = cmus alsasmall xbacklightsmall wlansmall battery xkeyboard date exit

[bar/i3_dual_bar_primary]
    inherit = bar/i3_general
    tray-position = right
    tray-reparent = true
    tray-background = ${colors.background}
    modules-left = i3 authentication printer bluetooth gestures rss timesync firewall resolver vpnhades xwindow
    modules-right = wlan alsa xbacklight battery xkeyboard date exit

[bar/i3_dual_bar_secondary]
    inherit = bar/i3_general
    modules-left = i3 cmus
    modules-right = temp cpu ram swap nvme sda

# modules
    include-file = ~/.config/polybar/i3.cfg
    include-file = ~/.config/polybar/xwindow.cfg

    include-file = ~/.config/polybar/network.cfg
    include-file = ~/.config/polybar/audio.cfg
    include-file = ~/.config/polybar/xbacklight.cfg
    include-file = ~/.config/polybar/battery.cfg
    include-file = ~/.config/polybar/xkeyboard.cfg
    include-file = ~/.config/polybar/date.cfg

    include-file = ~/.config/polybar/temperature.cfg
    include-file = ~/.config/polybar/cpu.cfg
    include-file = ~/.config/polybar/memory.cfg
    include-file = ~/.config/polybar/fs.cfg

    include-file = ~/.config/polybar/custom.cfg

# vim:ft=cfg
