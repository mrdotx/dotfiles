# author: klassiker [mrdotx]
# github: https://github.com/mrdotx/dotfiles
# date:   2022-04-05T08:40:20+0200

# colors
[colors]
    background = ${xrdb:Polybar.background0:#e6000000}
    foreground = ${xrdb:Polybar.foreground0:#cccccc}
    foreground1 = ${xrdb:Polybar.foreground1:#666666}
    black = ${xrdb:color0:#000000}
    main = ${xrdb:Polybar.main0:#4185d7}
    red = ${xrdb:color9:#df2800}
    yellow = ${xrdb:color3:#b0b200}

# wm
[global/wm]
    margin-top = 0
    margin-bottom = 0

# settings
[settings]
    screenchange-reload = true
    format-background = ${colors.background}
    format-foreground = ${colors.foreground}
    format-overline = ${colors.main}

# bars
[bar/general]
    bottom = false
    width = 100%
    height = 26
    locale = de_DE.UTF-8
    enable-ipc = true
    background = ${colors.background}
    line-size = 2
    module-margin = 1
    font-0 = "DejaVu Sans:pixelsize=10;2"
    font-1 = "Font Awesome 6 Free:style=Solid:pixelsize=10;2"
    font-2 = "Font Awesome 6 Free:style=Regular:pixelsize=10;2"
    font-3 = "Font Awesome 6 Brands:style=Regular:pixelsize=10;2"
    cursor-click = pointer
    cursor-scroll = ns-resize

[bar/primary]
    inherit = bar/general
    monitor = ${env:MONITOR:DisplayPort-0}
    tray-position = right
    tray-reparent = true
    tray-background = ${colors.background}
    modules-left = i3 services pacman pacman_timer inoreader inoreader_timer xwindow
    # modules-right = music alsasmall xbacklightsmall battery wlansmall xkeyboard date
    modules-right = music wlansmall xkeyboard date

[bar/secondary]
    inherit = bar/general
    monitor = ${env:MONITOR:HDMI-A-0}
    modules-left = i3

[bar/primary_stats]
    inherit = bar/primary
    # modules-right = music alsa xbacklight battery wlan xkeyboard date
    modules-right = music wlan xkeyboard date

[bar/secondary_stats]
    inherit = bar/secondary
    modules-right = cpu_temp cpu ram swap fs_root fs_srv

[bar/primary_single]
    inherit = bar/primary
    modules-left = i3_upin services pacman pacman_timer inoreader inoreader_timer xwindowsmall

# modules
    # i3, i3_upin
    include-file = modules/i3.cfg
    # xwindow, xwindowsmall
    include-file = modules/xwindow.cfg

    # wlan, wlansmall
    include-file = modules/network.cfg
    # alsa, alsasmall, pulseaudio, pulseaudiosmall
    include-file = modules/audio.cfg
    # xbacklight, xbacklightsmall
    include-file = modules/xbacklight.cfg
    # battery
    include-file = modules/battery.cfg
    # xkeyboard
    include-file = modules/xkeyboard.cfg
    # date
    include-file = modules/date.cfg

    # temp
    include-file = modules/temperature.cfg
    # cpu
    include-file = modules/cpu.cfg
    # ram, swap
    include-file = modules/memory.cfg
    # nvme, sda
    include-file = modules/fs.cfg

    # rss, services, music
    include-file = modules/custom.cfg

# vim:ft=cfg
