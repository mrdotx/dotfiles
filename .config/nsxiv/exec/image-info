#!/bin/sh

# path:   /home/klassiker/.local/share/repos/dotfiles/.config/nsxiv/exec/image-info
# author: klassiker [mrdotx]
# github: https://github.com/mrdotx/dotfiles
# date:   2024-06-10T21:19:16+0200

# $1: path to image file
# $2: image width
# $3: image height

printf "%dx%d · %s ·  %s · %s" \
    "$2" \
    "$3" \
    "$(du -Hh "$1" | cut -f1)" \
    "$(date '+%d.%m.%Y %H:%M' -r "$1")" \
    "$(basename "$1")"
