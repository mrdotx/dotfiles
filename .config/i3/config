bindsym $sup+Shift+0 move container to workspace $ws0; workspace $ws0

# workspace back and forth
bindsym $alt+Tab workspace back_and_forth

# navigate workspaces next/previous
bindsym $sup+Ctrl+Left workspace prev
bindsym $sup+Ctrl+Right workspace next

# keybindings window
####################

# change focus
bindsym $sup+Left focus left
bindsym $sup+Right focus right
bindsym $sup+Up focus up
bindsym $sup+Down focus down

# move focused window
bindsym $sup+Shift+Left move left 20 px
bindsym $sup+Shift+Right move right 20 px
bindsym $sup+Shift+Up move up 20 px
bindsym $sup+Shift+Down move down 20 px

# window switcher
bindsym $sup+Tab exec --no-startup-id "dmenu_windows.sh"

# keybindings container
#######################

# container
bindsym $sup+space mode "container"; exec --no-startup-id notify-send "i3 container mode started"
mode "container" {
bindsym slash exec --no-startup-id "notify-send 'i3 container mode keybindings' \
'←,→,↑,↓ - resize container\n\
-,=,+   - resize gaps\n\
f       - change focus\n\
t       - toggle tiling\n\
s       - toggle sticky\n\
m       - move to scratchpad\n\
c       - cycle scratchpad\n\
h       - tile horizontal\n\
v       - tile vertical\n\
q       - quit'"

    # resize container
    bindsym Left resize shrink width 20 px or 5 ppt
    bindsym Right resize grow width 20 px or 5 ppt
    bindsym Up resize shrink height 20 px or 5 ppt
    bindsym Down resize grow height 20 px or 5 ppt

    # resize gaps
    bindsym minus gaps inner current minus $gapin
    bindsym equal gaps inner current plus $gapin
    bindsym shift+equal gaps inner current set $gapin

    # change focus between tiling/floating windows
    bindsym f focus mode_toggle; exec --no-startup-id "notify-send 'i3 container mode' 'change focus'"

    # toggle tiling/floating
    bindsym t floating toggle; exec --no-startup-id "notify-send 'i3 container mode' 'toggle tiling'"

    # toggle sticky
    bindsym s sticky toggle; exec --no-startup-id "notify-send 'i3 container mode' 'toggle sticky'"

    # move the currently focused window to the scratchpad
    bindsym m move scratchpad; exec --no-startup-id "notify-send 'i3 container mode' 'move to scratchpad'"

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym c scratchpad show; exec --no-startup-id "notify-send 'i3 container mode' 'cycle scratchpad'"

    # split orientation
    bindsym h split horizontal; exec --no-startup-id "notify-send 'i3 container mode' 'tile horizontal'"
    bindsym v split vertical; exec --no-startup-id "notify-send 'i3 container mode' 'tile vertical'"

    # back to default mode
    bindsym q mode "default"; exec --no-startup-id notify-send "i3 container mode stopped"
    bindsym Return mode "default"; exec --no-startup-id notify-send "i3 container mode stopped"
    bindsym Escape mode "default"; exec --no-startup-id notify-send "i3 container mode stopped"
    bindsym $sup+space mode "default"; exec --no-startup-id notify-send "i3 container mode stopped"
}

