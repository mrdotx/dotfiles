# variables
###########

set $sup Mod4
set $alt Mod1
set $font pango:DejaVu Sans 9
set $nofont pango:DejaVu Sans 0

# windows
set $border_px 1
set $gap_size 0
set $gap_px 10
set $move 10 px
set $resize 10 px or 5 ppt
set $720p resize set 1280 720

# colors (xresources)
set_from_resource $black     i3wm.background
set_from_resource $white     i3wm.foreground
set_from_resource $primary   i3wm.primary
set_from_resource $secondary i3wm.secondary
set_from_resource $grey0     i3wm.grey0
set_from_resource $grey1     i3wm.grey1
set_from_resource $red       i3wm.red

# config
########

font $nofont
floating_modifier $sup
#workspace_layout tabbed
title_align center
default_border pixel $border_px
default_floating_border pixel $border_px
#hide_edge_borders smart_no_gaps
focus_follows_mouse no
mouse_warping none
tiling_drag swap_modifier $sup
gaps inner $gap_size
#smart_gaps on

# workspace output
# [1] main, [2] terminal, [3] browser, [4] graphic,    [5] office
# [6] mail, [7] finance,  [8] vm,      [9] multimedia, [0] spare
workspace  1 output    primary nonprimary
workspace  2 output nonprimary    primary
workspace  3 output nonprimary    primary
workspace  4 output    primary nonprimary
workspace  5 output    primary nonprimary
workspace  6 output nonprimary    primary
workspace  7 output    primary nonprimary
workspace  8 output    primary nonprimary
workspace  9 output nonprimary    primary
workspace 10 output    primary nonprimary

# colors
# class                  border   background text   indicator child_border
client.focused           $primary $secondary $white $primary  $primary
client.focused_inactive  $grey1   $grey1     $white $grey1    $grey1
client.focused_tab_title $primary $primary   $white
client.unfocused         $grey0   $grey0     $white $black    $black
client.urgent            $red     $red       $white $red      $red
client.placeholder       #000000  $grey0     $white #000000   $grey0
client.background        $black

# config files
##############

# applications
include config.d/applications.conf

# keybindings
include config.d/keybindings_applications.conf
include config.d/keybindings_multimedia.conf
include config.d/keybindings_system_management.conf
include config.d/keybindings_windows.conf
include config.d/keybindings_workspaces.conf

# modes
include config.d/mode_container.conf
include config.d/mode_editor.conf
include config.d/mode_exit.conf
include config.d/mode_floating.conf
include config.d/mode_macros.conf
include config.d/mode_nfs.conf
include config.d/mode_notes.conf
include config.d/mode_services.conf
include config.d/mode_ssh.conf

# status bar
#include config.d/status_bar.conf

# autostart
###########

exec --no-startup-id systemctl --user start i3.target
