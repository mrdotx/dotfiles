# keybindings system managment
##############################

# start program launcher
bindsym Super_L --release exec --no-startup-id "i3-dmenu-desktop --dmenu='dmenu -i'"
bindsym Shift+Super_L --release exec --no-startup-id "dmenu_run -i"

# kill focused window
bindsym Ctrl+q kill

# x window kill
bindsym Ctrl+$alt+BackSpace --release exec --no-startup-id "xkill"

# toggle fullscreen mode for the focused container or global
bindsym $sup+f fullscreen toggle
bindsym $sup+Shift+f fullscreen toggle global

# Lock screen or suspend (sleep -> https://github.com/i3/i3/issues/3298)
bindsym $sup+l exec --no-startup-id "sleep 0.5 && i3_knockout.sh -lock simple"
bindsym $sup+Shift+l exec --no-startup-id "sleep 0.5 && i3_knockout.sh -suspend"

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $sup+Shift+r restart

# exit i3 (logs you out of your x session)
bindsym Ctrl+$alt+Delete exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $sup+Shift+q exec --no-startup-id "i3-msg exit"

# keybindings services
######################

# services
bindsym $alt+space mode "services"; exec --no-startup-id notify-send "i3 services mode started"
mode "services" {
bindsym slash exec --no-startup-id "notify-send 'i3 services mode keybindings' \
'a - autolock enable/disable\n\
b - bluetooth enable/disable\n\
c - compositor enable/disable\n\
d - dunst restart\n\
f - firewall enable/disable\n\
g - gestures enable/disable\n\
l - authentication enable/disable\n\
m - mousepointer enable/disable\n\
n - resolver enable/disable\n\
p - printer enable/disable\n\
r - rss enable/disable\n\
t - tiling enable/disable\n\
v - vpn enable/disable\n\
y - timesync enable/disable\n\
q - quit'"

    # autolock disable/enable
    bindsym a exec --no-startup-id polybar-msg hook module/autolock 2

    # bluetooth disable/enable
    bindsym b exec --no-startup-id polybar-msg hook module/bluetooth 2

    # compositor disable/enable
    bindsym c exec --no-startup-id polybar-msg hook module/compositor 2

    # dunst restart
    bindsym d exec --no-startup-id "killall dunst; notify-send 'i3' 'restart dunst'"

    # firewall disable/enable
    bindsym f exec --no-startup-id polybar-msg hook module/firewall 2

    # gestures disable/enable
    bindsym g exec --no-startup-id polybar-msg hook module/gestures 2

    # authenthication disable/enable
    bindsym l exec --no-startup-id polybar-msg hook module/authentication 2

    # mousepointer disable/enable
    bindsym m exec --no-startup-id polybar-msg hook module/mousepointer 2

    # resolver disable/enable
    bindsym n exec --no-startup-id polybar-msg hook module/resolver 2

    # printer disable/enable
    bindsym p exec --no-startup-id polybar-msg hook module/printer 2

    # rss disable/enable
    bindsym r exec --no-startup-id polybar-msg hook module/rss 2

    # tiling disable/enable
    bindsym t exec --no-startup-id polybar-msg hook module/tiling 2

    # vpn disable/enable
    bindsym v exec --no-startup-id polybar-msg hook module/vpn 2

    # timesync disable/enable
    bindsym y exec --no-startup-id polybar-msg hook module/timesync 2

    # back to default mode
    bindsym q mode "default"; exec --no-startup-id notify-send "i3 services mode stopped"
    bindsym Return mode "default"; exec --no-startup-id notify-send "i3 services mode stopped"
    bindsym Escape mode "default"; exec --no-startup-id notify-send "i3 services mode stopped"
    bindsym $alt+space mode "default"; exec --no-startup-id notify-send "i3 services mode stopped"
}

