!! vim:fileencoding=utf-8:ft=xdefaults:foldmethod=marker

!! Path:     ~/.Xresources.conf
!! User:     klassiker [mrdotx]
!! GitHub:   https://github.com/mrdotx/dotfiles

!! general {{{
*background:                        #000000
*foreground:                        #ffffff
*fading:                            8
*fadeColor:                         #000000
*cursorColor:                       #3476a4
*pointerColorBackground:            #2b2c2b
*pointerColorForeground:            #3476a4

! black normal/bright
*color0:                            #000000
*color8:                            #333333

! red normal/bright
*color1:                            #fe0000
*color9:                            #ff5555

! green normal/bright
!*color2:                            #00b200
!*color10:                           #00ff00
*color2:                            #4185d7
*color10:                           #3476a4

! yellow normal/bright
*color3:                            #b0b200
*color11:                           #ffff55

! blue normal/bright
*color4:                            #1f5393
*color12:                           #4084d6

! purple normal/bright
*color5:                            #980096
*color13:                           #ff55ff

! cyan normal/bright
*color6:                            #009698
*color14:                           #55ffff

! white normal/bright
*color7:                            #cccccc
*color15:                           #ffffff
!! }}}

!! xcursor {{{
Xcursor.theme:                      xcursor-breeze
Xcursor.size:                       0
!! }}}

!! Xft {{{
Xft.dpi:                            96
Xft.antialias:                      true
Xft.hinting:                        true
Xft.rgba:                           rgb
Xft.autohint:                       false
Xft.hintstyle:                      hintslight
Xft.lcdfilter:                      lcddefault
!! }}}

!! Xautolock {{{
Xautolock.corners:                  ----
Xautolock.time:                     10
Xautolock.locker:                   suspend.sh
Xautolock.notify:                   30
Xautolock.notifier:                 notify-send 'i3' 'Locking screen and suspend pc in 30 s' --icon=messagebox_warning
!! }}}

!! Sxiv {{{
Sxiv*background:                    #ffffff
Sxiv*foreground:                    #000000
!! }}}

!! XTerm {{{
XTerm*background:                   #000000
XTerm*foreground:                   #ffffff
XTerm*pointerColor:                 #4084d6
XTerm*faceName:                     DejavuSansMono Nerd Font Mono
XTerm*faceSize:                     12
XTerm*renderFont:                   true
XTerm*reverseVideo:                 off
XTerm*selectToClipboard:            true
!! }}}

!! URxvt {{{
URxvt*font:                         xft:DejaVuSansMono Nerd Font Mono:size=12:antialias=true:hinting=true
URxvt*boldFont:                     xft:DejaVuSansMono Nerd Font Mono:bold:size=12:antialias=true:hinting=true
URxvt*letterspacing:                -2

URxvt*depth:                        32
URxvt*background:                   [90]#000000
URxvt*foreground:                   #ffffff
URxvt*scrollBar:                    false
URxvt*mouseWheelScrollPage:         false
URxvt*cursorBlink:                  true
URxvt*saveLines:                    5000

! Perl extensions
URxvt.perl-ext:                     default,url-select,keyboard-select,resize-font

! URL copy or open
URxvt.keysym.M-u:                   perl:url-select:select_next
URxvt.url-select.launcher:          /usr/bin/xdg-open
URxvt.url-select.underline:         true

! Keyboard select
URxvt.keysym.M-Escape:              perl:keyboard-select:activate

! Normal copy-paste keybindings without perls
URxvt.iso14755:                     false
URxvt.keysym.Shift-Control-V:       eval:paste_clipboard
URxvt.keysym.Shift-Control-C:       eval:selection_to_clipboard

! Xterm escape codes, word by word movement
URxvt.keysym.Control-Left:          \033[1;5D
URxvt.keysym.Shift-Control-Left:    \033[1;6D
URxvt.keysym.Control-Right:         \033[1;5C
URxvt.keysym.Shift-Control-Right:   \033[1;6C
URxvt.keysym.Control-Up:            \033[1;5A
URxvt.keysym.Shift-Control-Up:      \033[1;6A
URxvt.keysym.Control-Down:          \033[1;5B
URxvt.keysym.Shift-Control-Down:    \033[1;6B
!! }}}

!! simple terminal {{{
st.alpha:                           0.90
st.font:                            DejaVuSansMono Nerd Font Mono:size=12
st.termname:                        st-256color
st.borderpx:                        2
!! }}}
